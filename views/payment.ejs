<section class="summary-card">
  <h1>Payment Summary</h1>

  <div class="payment-summary">
    <p><strong>Car Total:</strong> $<%= carTotal.toFixed(2) %></p>
    <% if (insurance) { %>
      <p><strong>Insurance Total:</strong> $<%= insuranceTotal.toFixed(2) %></p>
    <% } %>
    <% if (accessories && accessories.length > 0) { %>
      <p><strong>Accessories Total:</strong> $<%= accessoriesTotal.toFixed(2) %></p>
    <% } %>
    <hr>
    <h2>Total Payment: $<%= totalPrice.toFixed(2) %></h2>
  </div>

  <!-- Payment Form -->
  <form method="POST" action="/payment" class="payment-form">
    <div class="card-fields">
      <label>Card Number</label>
      <input type="text" name="card_number" maxlength="16" placeholder="1234 5678 9012 3456" required>

      <label>Expiry</label>
      <input type="text" name="expiry" placeholder="MM/YY" required>

      <label>CVV</label>
      <input type="password" name="cvv" maxlength="3" placeholder="•••" required>

    </div>

    <button type="submit" class="pay-btn">Confirm & Pay</button>
  </form>
</section>


